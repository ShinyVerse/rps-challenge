<% if @game.winner == "Draw" %>
<h1> It's a <%= @game.winner %> !</h1>
<% else %>
<h1> <%= @game.winner %> wins!</h1>
<% end %>
<table>
  <tr>
    <th> <%= @game.player1.name %> </th>
      <th> : </th>
    <th> <%= @game.player2.name %> </th>
  </tr>
  <tr>
    <td> <%= @game.player1.choice %> </td>
    <td> : </td>
    <td> <%= @game.player2.choice %> </td>
  </tr>
</table>
<% if @game.player2 != "Computer" %>
<form action="/multiplayer" method="get">
  <input type="submit" value="PvP Again!" name="try_again"/>
</form>
<% else %>
<form action="/sologame" method="get">
  <input type="submit" value="Try Again!" name="try_again"/>
</form>
<% end %>
